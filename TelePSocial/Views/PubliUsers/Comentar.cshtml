@model TelePSocial.Entidades.CommentUsers
@{
}
<div class="ibox-content">
        <div class="row">
            <form asp-action="Comentar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="idPubliUsers" value="@ViewBag.Id"/> 
                <div class="col col-sm-12 text-right">
                    <div class="form-group">
                        <div class="input text">
                            <label  class="control-label"></label>
                            <textarea asp-for="DesComment" class="form-control" required ></textarea>
                            <span asp-validation-for="DesComment" class="text-danger"></span>
                        </div>
                    </div>
                </div>   
                <br />
                <div class="col col-sm-12 text-right">
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </div>
    </div>