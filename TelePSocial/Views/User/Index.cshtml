@section scripts{

<script>
        
      $("body").on("click", "a.edit-dialog-window", null, function (e) {
            e.preventDefault();
            var $link = $(this);
            var url = $(this).attr('href');
            if (url.indexOf('#') == 0) {
                $('#Edit').modal('show');
            }
            else {
                $.get(url, function (data) {
                    $('#Edit .teeeeEdit').html(data);
                    $('#Edit').modal();
                }).success(function () { $('input:text:visible:first').focus(); });
            }
        });


</script>
