@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Identity/Pages/_TelePLayout.cshtml";
}
 

<div class="row">
    <div class="container">
        <div class="col-md-12">
            <br /> 
            <p class="text-center">
                <img src="~/images/Feed/usernot.jpg" class="text-center" width="90" height="90" />
            </p>
            <br />
            <h3>Crear nueva cuenta.</h3>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Input.BirthDay"></label>
                    <input type="date" name="Input.BirthDay" class="form-control" /> 
                    <span asp-validation-for="Input.BirthDay" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="row"> 
                        <div class="form-check  px-4 col-md-4 "> 
                            <input asp-for="Input.Gender" class="form-check-input" type="radio" name="Input.Gender"  value="M" > 
                            <label class="form-check-label" for="Input.Gender">
                                Masculino
                            </label>
                        </div>
                        <div class="form-check  px-4 col-md-4">  
                            <input asp-for="Input.Gender" class="form-check-input" type="radio" name="Input.Gender"  value="F"> 
                            <label class="form-check-label" for="Input.Gender">
                                Femenino
                            </label>
                        </div>
                        <div class="form-check  px-4 col-md-4">  
                            <input asp-for="Input.Gender" class="form-check-input" type="radio" name="Input.Gender"  value="O"> 
                            <label class="form-check-label" for="Input.Gender">
                                Otros
                            </label>
                        </div>
                    </div> 
                    <span asp-validation-for="Input.Gender" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
            <br />
        </div>  
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
